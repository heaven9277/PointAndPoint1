<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#10000000">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="#505050"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/leftback"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:text="返回"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/linear_back"
            android:layout_marginRight="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <com.loopj.android.image.SmartImageView
                    android:id="@+id/group_image"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/group"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天下纵横"
                        android:textColor="#000"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/group_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/group_name"
                        android:text="98654842141"
                        android:textColor="#000"
                        android:layout_marginTop="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:background="@drawable/linear_back">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="群成员"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#000"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="25dp"
                android:layout_marginTop="5dp">
                <TableRow>
                    <!--第一行第一列       使用layout_weight 属性来规定是否是均分，我这儿使用均分，所有每一列都为1-->
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--第一行第一列用于布局  RelativeLayout 使用相对布局嵌套在LinearLayout布局中，
                        可以将文字和图片布局在一起
                        这样可以做成一个文字可图片混合的按钮，这里只用来做单元格效果
                        设置背景色，这里的背景色将覆盖表格的背景色，根据你需要的空间，留出空间大小，留出的部分成为单元格边框-->
                        <RelativeLayout
                            android:id="@+id/Re_butt1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/background_light"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp">

                            <!--第一行第一列 图片-->
                            <com.loopj.android.image.SmartImageView
                                android:id="@+id/imageView1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/users" />

                            <!--第一行 第一列 文字-->
                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageView1"
                                android:layout_centerHorizontal="true"
                                android:text="Demo"
                                android:textColor="#000"
                                android:textSize="18dp" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--第一行第一列用于布局  RelativeLayout 使用相对布局嵌套在LinearLayout布局中，
                        可以将文字和图片布局在一起
                        这样可以做成一个文字可图片混合的按钮，这里只用来做单元格效果
                        设置背景色，这里的背景色将覆盖表格的背景色，根据你需要的空间，留出空间大小，留出的部分成为单元格边框-->
                        <RelativeLayout
                            android:id="@+id/Re_butt2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/background_light"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp">

                            <!--第一行第一列 图片-->
                            <com.loopj.android.image.SmartImageView
                                android:id="@+id/user_001"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/user001" />

                            <!--第一行 第一列 文字-->
                            <TextView
                                android:id="@+id/user_002"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_001"
                                android:layout_centerHorizontal="true"
                                android:text="赞"
                                android:textColor="#000"
                                android:textSize="18dp" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--第一行第一列用于布局  RelativeLayout 使用相对布局嵌套在LinearLayout布局中，
                        可以将文字和图片布局在一起
                        这样可以做成一个文字可图片混合的按钮，这里只用来做单元格效果
                        设置背景色，这里的背景色将覆盖表格的背景色，根据你需要的空间，留出空间大小，留出的部分成为单元格边框-->
                        <RelativeLayout
                            android:id="@+id/Re_butt3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/background_light"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp">

                            <!--第一行第一列 图片-->
                            <com.loopj.android.image.SmartImageView
                                android:id="@+id/invation"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/add_user" />

                            <!--第一行 第一列 文字-->
                            <TextView
                                android:id="@+id/user_003"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/invation"
                                android:layout_centerHorizontal="true"
                                android:text="邀请"
                                android:textColor="#0B98F2"
                                android:textSize="18dp" />
                        </RelativeLayout>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/group_desc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/linear_back"
                android:textSize="18sp"
                android:textColor="#000"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="本群用于android讨论开发，欢迎大家踊跃发言。。"/>
            <TextView
                android:id="@+id/manager_group"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/linear_back"
                android:text="管理群"
                android:textColor="#000"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/clear_group_message"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/linear_back"
                android:text="清空群消息"
                android:textColor="#000"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/edit_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:background="@drawable/btn_back"
            android:text="编辑群聊"/>
        <Button
            android:id="@+id/out_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:background="@drawable/out_group"
            android:layout_marginBottom="20dp"
            android:text="退出群聊"/>
    </LinearLayout>
</ScrollView>