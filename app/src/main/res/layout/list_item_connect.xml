<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/connect_portrait"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/users" />

    <TextView
        android:id="@+id/connect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="金馆长"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/connect_phone_number"
        app:layout_constraintLeft_toRightOf="@id/connect_portrait"
        app:layout_constraintTop_toTopOf="@id/connect_portrait" />

    <TextView
        android:id="@+id/connect_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="12332112345"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/connect_portrait"
        app:layout_constraintLeft_toRightOf="@id/connect_portrait"
        app:layout_constraintTop_toBottomOf="@id/connect_name" />

    <Button
        android:id="@+id/connect_call"
        android:background="@drawable/call"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="25dp"
        app:layout_constraintBottom_toBottomOf="@id/connect_portrait"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/connect_portrait"
         />

</android.support.constraint.ConstraintLayout>